<?xml version="1.0"?>
<pipeline>
    <component>
        <id>jpeg_input</id>
        <name>jpeg_input</name>
        <class>JpegInput</class>
        <property>
            <name>file_path</name>
            <value>tmp/IMG_5946_b.JPG</value>
        </property>
    </component>
    <component>
        <id>gray_scale</id>
        <name>gray_scale</name>
        <class>GrayScale</class>
    </component>
    <component>
        <id>rotate</id>
        <name>rotate</name>
        <class>Rotate</class>
        <property>
            <name>angle</name>
            <value type="float">10</value>
        </property>
        <additional_component>
            <id>parameter_condition</id>
            <notifier>condition</notifier>
        </additional_component>
    </component>
    <component>
        <id>parameter_condition</id>
        <name>condition</name>
        <class>Condition</class>
        <property>
            <name>type</name>
            <value>parameter</value>
        </property>
        <property>
            <name>name</name>
            <value>angle</value>
        </property>
        <property>
            <name>operator</name>
            <value>ge</value>
        </property>
        <property>
            <name>value</name>
            <value type="int">180</value>
        </property>
    </component>
    <component>
        <id>jpeg_output</id>
        <name>jpeg_output</name>
        <class>JpegOutput</class>
        <property>
            <name>file_path</name>
            <value>tmp/test.png</value>
        </property>
    </component>
    <component>
        <id>chart_visu</id>
        <name>line</name>
        <class>Line</class>
        <autoglue>false</autoglue>
        <property>
            <name>parameter_list</name>
            <value>angle</value>
        </property>
        <additional_component>
            <id>rotate</id>
        </additional_component>
    </component>
    <component>
        <id>histogram</id>
        <name>histogram</name>
        <class>Histogram</class>
        <autoglue>false</autoglue>
        <additional_component>
            <id>gray_scale</id>
            <notifier>output</notifier>
        </additional_component>
    </component>
    <component>
        <id>histo_visu</id>
        <name>line</name>
        <class>Line</class>
        <autoglue>false</autoglue>
        <property>
            <name>parameter_list</name>
            <value>histogram</value>
        </property>
        <property>
            <name>type</name>
            <value>update</value>
        </property>
        <additional_component>
            <id>histogram</id>
        </additional_component>
    </component>
</pipeline>